<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:elevation="4dp"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traveller Details"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/fromToTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi To Kolkata | 07 Apr, Monday"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable content starts here -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <!-- Dynamic Pricing Alert -->
    <LinearLayout
        android:id="@+id/dynamicPricingAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF8E1"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/bell_icon"
            app:tint="#F57C00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dynamic Pricing is applicable. Fares may increase."
            android:textColor="#F57C00"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Train Details Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/trainDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dynamicPricingAlert"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/trainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sdah Duronto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/trainNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#12260 | 3A | GN"
                android:textSize="14sp"
                android:textColor="#666666"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trainName"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RLWL 42"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated few mins ago"
                android:textSize="12sp"
                android:textColor="#888888"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/status"
                android:layout_marginTop="4dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@id/trainNumber"
                android:layout_marginTop="16dp" />

            <!-- Journey Details -->
            <TextView
                android:id="@+id/departureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:45 PM,"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/departureDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Apr"
                android:textSize="14sp"
                android:textColor="#888888"
                app:layout_constraintStart_toEndOf="@id/departureTime"
                app:layout_constraintTop_toTopOf="@id/departureTime"
                app:layout_constraintBottom_toBottomOf="@id/departureTime"
                android:layout_marginStart="4dp" />


            <TextView
                android:id="@+id/journeyDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17h 40m"
                android:textColor="#888888"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/departureTime" />

            <TextView
                android:id="@+id/arrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",1:25 PM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/arrivalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="8 Apr"
                android:textColor="#888888"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/arrivalTime"
                app:layout_constraintEnd_toStartOf="@+id/arrivalTime"
                app:layout_constraintTop_toTopOf="@id/arrivalTime" />

            <TextView
                android:id="@+id/departureStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Delhi (NDLS)"
                android:textSize="14sp"
                android:textColor="#888888"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/departureTime"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/arrivalStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sealdah (SDAH)"
                android:textSize="14sp"
                android:textColor="#888888"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrivalTime"
                android:layout_marginTop="4dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

        <!-- Boarding Station Section -->
        <LinearLayout
            android:id="@+id/boardingStationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/trainDetailsCard">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boarding"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp">

                <Spinner
                    android:id="@+id/boardingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="32dp"
                    android:textAlignment="viewStart"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@android:color/white"
                    android:dropDownVerticalOffset="10dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_expand_collapse"
                android:contentDescription="Dropdown icon" />
            </FrameLayout>


        </androidx.cardview.widget.CardView>
        </LinearLayout>


        <!-- IRCTC Username Section -->
    <LinearLayout
        android:id="@+id/irctcSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/boardingStationSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IRCTC Username"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why is this required?"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter IRCTC username."
            android:textColorHint="#AAAAAA"
            android:padding="16dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE NEW IRCTC ACCOUNT"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/forgotUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORGOT USERNAME"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>

        <!-- Passenger Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/passenger"
                    android:contentDescription="Passenger icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passenger Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select or Add passenger details like name, age, etc"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- ðŸ”„ Loading Spinner -->
            <ProgressBar
                android:id="@+id/passengerLoadingSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:indeterminate="true"
                android:visibility="gone"
                style="?android:attr/progressBarStyleSmall" />


            <!-- Warning Message -->
            <TextView
                android:id="@+id/noPassengersWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No saved passengers! Please add at least one passenger"
                android:textColor="#B86E00"
                android:background="#FFF8E1"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="14sp" />

            <!-- ðŸš€ RecyclerView for Passengers -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPassengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- Add Passenger Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddPassenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD PASSENGER"
                android:textColor="#2196F3"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/button_outline_blue"
                android:gravity="center" />

        </LinearLayout>


        <!-- Cancellation Policy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_shield"
                    android:contentDescription="Shield icon"
                    app:tint="#2196F3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Full Fare Refund on Cancellation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Just at â‚¹532 per person"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/cancellationOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <RadioButton
                            android:id="@+id/radioZeroCharges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zero charges when the ticket is cancelled"
                            android:textStyle="bold"
                            android:checked="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="32dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refund: â‚¹ 3135 per person"
                                android:textColor="#4CAF50"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/baseline_check_24"
                                android:layout_marginStart="4dp"
                                android:contentDescription="Check icon"
                                app:tint="#4CAF50" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <RadioButton
                            android:id="@+id/radioPayFees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pay fees on cancellation"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35% travellers cancel their ticket due to change in plans"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:layout_marginStart="32dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RadioGroup>

            <TextView
                android:id="@+id/termsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Offers & Discounts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offers &amp; Discounts"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/couponCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter a coupon code"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:textColor="#2196F3"
                    android:background="@drawable/button_outline" />
            </LinearLayout>
        </LinearLayout>

        <!-- Contact Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user"
                    android:contentDescription="Contact icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Eg. abc@gmail.com"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Eg. 9111111111"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@drawable/edit_text_border" />
        </LinearLayout>

        <!-- GST Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/checkboxGst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Gst Details"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" (Optional)"
                    android:textSize="16sp"
                    android:textColor="#757575" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your State"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginStart="4dp"
                    android:contentDescription="Info icon"
                    app:tint="#757575" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Required for GST purpose on your tax invoice"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/stateSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:entries="@array/states"
                android:prompt="@string/select_state" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkboxSaveDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm and save these details to your profile"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </LinearLayout>

        <!-- Terms and Proceed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By proceeding, I confirm that I agree to the Cancellation Policy, Booking Policy, Privacy Policy, User Agreement, and, Terms of Service"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnProceedToPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCEED TO PAYMENT"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:padding="16dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>