<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@android:color/white">

    <!-- Header section -->
    <TextView
        android:id="@+id/trainNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Number"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/trainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="12dp"
        android:text="Train Name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/trainName"
        app:layout_constraintStart_toEndOf="@+id/trainName"
        app:layout_constraintTop_toTopOf="@+id/trainName" />

    <LinearLayout
        android:id="@+id/timeInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainName">

        <TextView
            android:id="@+id/fromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:10"
            android:textColor="#666666"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/fromStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="#666666"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="âšªâ”€â”€"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/travelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="â”€â”€âšª"
            android:textColor="#666666"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/toStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/toTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:11"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Rating section -->
    <LinearLayout
        android:id="@+id/ratingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trainName">

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star_filled"
            app:tint="#FFC107" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="4.1"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/runningDaysLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ratingLayout"
        app:layout_constraintTop_toBottomOf="@+id/ratingLayout">

        <TextView
            android:id="@+id/sundayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mondayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="M"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tuesdayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wednesdayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="W"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/thursdayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fridayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="F"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/saturdayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/maintenanceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF7F3"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ticketOptionsScrollView">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_warning_24"
            app:tint="#FFB300" />

        <TextView
            android:id="@+id/maintenanceMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="ðŸ”§ Railway servers are under daily maintenance from 11:40 PM to 12:20 AM.\nPlease try searching trains again after this period."
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#3F51B5"
            android:text="TRY AGAIN"
            android:textAllCaps="true"
            android:textColor="#FFFFFF" />
    </LinearLayout>




    <!-- Horizontal scrollable ticket options -->
        <HorizontalScrollView
            android:id="@+id/ticketOptionsScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@+id/timeInfoLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticket1ACard"
                        style="@style/TicketCardStyle">

                        <LinearLayout
                            style="@style/TicketCardInner"
                            android:orientation="vertical">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/class1AText"
                                    style="@style/TicketClassText"
                                    android:text="1A" />

                                <TextView
                                    android:id="@+id/price1AText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/status1A"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/time1AText"
                                style="@style/TicketTimeText" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>



                    <!-- 2A Ticket Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticket2ACard"
                        style="@style/TicketCardStyle">


                        <LinearLayout style="@style/TicketCardInner">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/class2AText"
                                    style="@style/TicketClassText"
                                    android:text="2A" />

                                <TextView
                                    android:id="@+id/price2AText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/status2A"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/time2AText"
                                style="@style/TicketTimeText" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- 3A Ticket Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticket3ACard"
                        style="@style/TicketCardStyle">


                        <LinearLayout style="@style/TicketCardInner">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/class3AText"
                                    style="@style/TicketClassText"
                                    android:text="3A" />

                                <TextView
                                    android:id="@+id/price3AText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/status3A"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/time3AText"
                                style="@style/TicketTimeText" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- SL Ticket Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticketSLCard"
                        style="@style/TicketCardStyle">


                        <LinearLayout style="@style/TicketCardInner">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/classSLText"
                                    style="@style/TicketClassText"
                                    android:text="SL" />

                                <TextView
                                    android:id="@+id/priceSLText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/statusSL"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/timeSLText"
                                style="@style/TicketTimeText" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- 2S Ticket Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticket2SCard"
                        style="@style/TicketCardStyle">


                        <LinearLayout style="@style/TicketCardInner">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/class2SText"
                                    style="@style/TicketClassText"
                                    android:text="2S" />

                                <TextView
                                    android:id="@+id/price2SText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/status2S"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/time2SText"
                                style="@style/TicketTimeText" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- CC Ticket Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticketCCCard"
                        style="@style/TicketCardStyle">


                        <LinearLayout style="@style/TicketCardInner">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/classCCText"
                                    style="@style/TicketClassText"
                                    android:text="CC" />

                                <TextView
                                    android:id="@+id/priceCCText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/statusCC"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/timeCCText"
                                style="@style/TicketTimeText" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- EC Ticket Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticketECCard"
                        style="@style/TicketCardStyle">


                        <LinearLayout style="@style/TicketCardInner">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/classECText"
                                    style="@style/TicketClassText"
                                    android:text="EC" />

                                <TextView
                                    android:id="@+id/priceECText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/statusEC"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/timeECText"
                                style="@style/TicketTimeText" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ticket3ECard"
                        style="@style/TicketCardStyle">


                        <LinearLayout style="@style/TicketCardInner">

                            <LinearLayout style="@style/TicketClassLayout">

                                <TextView
                                    android:id="@+id/class3EText"
                                    style="@style/TicketClassText"
                                    android:text="3E" />

                                <TextView
                                    android:id="@+id/price3EText"
                                    style="@style/TicketPriceText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/status3E"
                                style="@style/TicketStatusText" />

                            <TextView
                                android:id="@+id/time3EText"
                                style="@style/TicketTimeText" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@+id/ticketOptionsScrollView" />
</androidx.constraintlayout.widget.ConstraintLayout>